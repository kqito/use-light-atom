{
  "name": "use-light-atom",
  "version": "0.0.4",
  "description": "A simple atom-based state management for react",
  "keywords": [
    "react",
    "react-hooks",
    "hooks",
    "atom"
  ],
  "homepage": "https://github.com/kqito/use-light-atom#readme",
  "bugs": {
    "url": "https://github.com/kqito/use-light-atom/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kqito/use-light-atom.git"
  },
  "license": "MIT",
  "author": "Nakagawa kaito",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production npm-run-all -s clean build:rollup",
    "build:rollup": "rollup -c",
    "test": "cross-env NODE_ENV=TEST jest",
    "type": "tsc --noEmit",
    "format": "npm-run-all -s format:*",
    "format:fix": "prettier --write './src/**/*.{ts,tsx,js,jsx,json}'",
    "format:lint": "eslint ./src --ext .ts,.tsx",
    "clean": "rimraf ./dist",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "storybook:static": "gh-pages -d storybook-static",
    "storybook:deploy": "npm-run-all -s storybook:build storybook:static",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "autoprefixer": "^9",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-deep-equal": "^3.1.3",
    "gh-pages": "^3.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-dom": "^4.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "ts-jest": "^26.5.4",
    "ts-loader": "^9.2.6",
    "typescript": "^4.2.3"
  },
  "peerDependencies": {
    "react": ">=16.8"
  }
}
